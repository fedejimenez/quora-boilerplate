<div class="row">
	<div class="col-md-3"><h4 class="text-muted">Most Upvoted Questions</h4>

	<hr>

	<div class="list-group">
		<% if @trending %>
			<% @trending.each do |id| %>
				<li class="list-group-item-text"><a href="/question/<%= id %>"><%= Question.find(id).question %></a></li>
				<hr>
			<% end %>
		<% end %>
	</div>

	</div>
	<div class="col-md-6">
		<h4 class="text-muted">Latest Stories</h4>
		<hr>
		<div class="list-group">
			<% if @questions %>
			<% @questions.each do |q| %>
				<h4 class="list-group-item-heading"><a href="/question/<%= q.id %>"><%= q.question %></a></h4>
				<a href="/users/<%=q.user_id%>"><img class="img-circle special-img" src="/img/<%= q.user.img%>" alt="">
					<h5 class=""> <%= q.user.name %> </h5>
				</a>
				<h6 class="list-group-item-text"><%= q.answers.last.answer if q.answers.last %></h6>
				<div class="row">
<!-- 					<form class="col-md-2" action="/question/<%=q.id%>/upvote" method="post"> -->								

					<button class="btn btn-xs btn-info " id="upvote" onclick="upvote('<%= q.id %>');">
						<i class="fa fa-thumbs-up"></i>
						<span id="upvote-count"> | <%= q.count_upvotes %> </span>
					</button>

<!-- 
					<form class="col-md-2" action="/question/<%=q.id%>/downvote" method="post"> -->

					<button class="btn btn-xs btn-secondary" id="downvote" onclick="downvote('<%= q.id %>');">
						<i class="fa fa-thumbs-down"></i> 
						<span id="downvote-count"> | <%= q.count_downvotes %> </span>
					</button>

					<!-- </form> -->
					<div class="col-md-8"><p></p></div>
				</div>
				<div class="col-md-8"><p id="message-vote"></p></div>
				<hr>
			<% end %>
		<% end %>
		</div>

	<%= will_paginate @questions %>
	</div>
	<div class="col-md-3 panel panel-default text-center"><h4 class="text-muted">New Users</h4>
	<hr>
	<% if @users %>
			<% @users.each do |user| %>
				<div class="panel-body"><a href="/users/<%= user.id %>"><%= user.name + " | " + user.email %></a></div>
				<hr>
			<% end %>
		<% end %>
	</div>
</div>
