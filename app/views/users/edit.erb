<div class="row">
	<div class="col-md-3">
		<h3><%= current_user.name%></h3>

		<img src="/img/user_general.png" alt="" width="70%">
        <form class="form-group" action="/users/<%= current_user.id %>" method="POST" enctype="multipart/form-data">
            <input type="file" name="file" value="put">
            <input type="submit" value="Confirm">
        </form>
	</div>
	<!-- <div class="col-md-3"></div> -->
	<div class="col-md-6 form-group">
		<h3>Edit Your Profile</h3>
		<hr>
			<form action="/users/<%= current_user.id %>" method="post">

				<input type="hidden" name="_method" value="put">
				<h5 class="text-primary">Name:</h5><input class="form-control" type="text" name="user[name]" value="<%= current_user.name%>"><br>

				<h5 class="text-primary">Email:</h5> <input class="form-control" type="text" name="user[email]" value="<%= current_user.email%>"><br>
				<input class="btn btn-primary" type="submit" value="Confirm">
			</form>
		<hr>
			<p class="text-danger"><%= @message if @message %></p>	
	</div>
</div>